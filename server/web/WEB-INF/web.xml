        <url-pattern>/CreateAccountNavigator</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>InventoryViewServletAndroid</servlet-name>
        <servlet-class>InventoryServlets.InventoryViewServletAndroid</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InventoryViewServletAndroid</servlet-name>
